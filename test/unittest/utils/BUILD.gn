import("//build/test.gni")

config("edm_unittest_utils_configs") {
  include_dirs = [ "include" ]
}

ohos_static_library("edm_unittest_utils") {
  testonly = true

  configs = [
    ":edm_unittest_utils_configs",
    "../../../common/config:coverage_flags",
  ]

  public_configs = [ ":edm_unittest_utils_configs" ]

  sources = [ "./src/utils.cpp" ]

  deps = []

  external_deps = [
    "access_token:libaccesstoken_sdk",
    "access_token:libnativetoken",
    "access_token:libtoken_setproc",
    "init:libbegetutil",
  ]

  sanitize = {
    boundary_sanitize = true
    cfi = true
    cfi_cross_dso = true
    debug = false
    integer_overflow = true
    ubsan = true
  }
  branch_protector_ret = "pac_ret"
  subsystem_name = "customization"
  part_name = "enterprise_device_management"
}
