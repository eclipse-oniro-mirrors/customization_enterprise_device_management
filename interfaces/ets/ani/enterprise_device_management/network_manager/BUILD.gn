import("//build/config/components/ets_frontend/ets2abc_config.gni")
import("//build/ohos.gni")

ohos_shared_library("networkManager_ani") {
  shlib_type = "ani"
  include_dirs = [
    "./include",
    "../utils/include",
    "../../../../../common/native/include",
    "../../../../inner_api/common/include",
  ]
  sources = [
    "./src/networkManager_ani.cpp",
    "../utils/src/edm_ani_utils.cpp",
  ]

  deps = [
    "../../../../../common/native:edm_commom",
    "../../../../inner_api:edmservice_kits",
  ]

  external_deps = [
    "ability_base:want",
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_single",
    "runtime_core:ani",
  ]

  sanitize = {
    boundary_sanitize = true
    cfi = true
    cfi_cross_dso = true
    debug = false
    integer_overflow = true
    ubsan = true
  }

  part_name = "enterprise_device_management"
  subsystem_name = "customization"
}

generate_static_abc("networkManager") {
  base_url = "./ets"
  files = [ "./ets/@ohos.enterprise.networkManager.ets" ]
  is_boot_abc = "True"
  device_dst_file = "system/framework/networkManager.abc"
}

ohos_prebuilt_etc("networkManager_etc") {
  source = "$target_out_dir/networkManager.abc"
  module_install_dir = "framework"
  part_name = "enterprise_device_management"
  subsystem_name = "customization"
  deps = [ ":networkManager" ]
}
